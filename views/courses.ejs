<%- include ('partials/_header') %>

<body class="sub_page">

  <div class="hero_area">
    <!-- header section strats -->
      <%- include ('partials/_nav') %>
    <!-- end header section -->
  </div>
  
  <!-- course section start -->
  <section class="course_section layout_padding">
    <div class="course_bg_box ">
      <div class="bg_img_box">
        <img src="images/course-bg.jpg" alt="">
      </div>
    </div>
    <div class="container-fluid pr-0">
      <div class="heading_container">
        <h2>All Courses</h2>
        <p>All courses here. You can enroll to all of them.</p>
      </div>
      <div class="course_container">
        <div class=" course_owl-carousel owl-carousel owl-theme ">
          <% for(let i = 0; i < courses.length; i++) { %>
          <div class="item">
            <div class="box">
              <div class="img-box">
                <img src="images/c1.jpg" alt="">
              </div>
              <div class="detail-box">
                <h4><a href="/courses/<%= courses[i].slug %>"><%= courses[i].name %></a></h4>
                <p><%= courses[i].description %></p>
                <a href="">View Detail</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      
      <div class="heading_container" style="margin-top: 50px">
        <h2>Categories</h2>
        <ul>
          <% for(let i=0; i < categories.length; i++) { %>
            <li>
              <a href="/courses?categories=<%= categories[i].slug %>">
                <p><%= categories[i].name %></p>
              </a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </section>

  <!-- course section ends -->

<%- include ('partials/_footer') %>