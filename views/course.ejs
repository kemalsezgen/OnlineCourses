<%- include ('partials/_header') %>

<body class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
      <%- include ('partials/_nav') %>
    <!-- end header section -->
  </div>

<div>
  <div class="container text-center">
    <h1>
      <%= course.name %>
    </h1>
    <h3>
      <span class="m_1"><%= course.description %></span>
    </h3>
  </div>
</div>

<div id="overviews" class="section wb">
  <div class="container">
    <div class="row">
      <div class="col-lg-9 blog-post-single">
        <div class="blog-item">
          <div class="image-blog">
            <img src="/images/course-bg.jpg" alt="" class="img-fluid" />
          </div>
          <div class="post-content">
            <div class="post-date">
              <form method="POST" action="/courses/enroll">
                <input type="hidden" name="course_id" value="<%= course._id %>">
                <button class="btn btn-lg btn-warning text-white"><span>ENROLL</span></button>
              </form>
            </div>
            <div class="meta-info-blog">
              <span><i class="fa fa-calendar"></i></span>
            </div>
            <div class="blog-title">
              <h2><b><%= course.name %></b></h2>
            </div>
            <div class="blog-desc">
              <blockquote class="default"><%= course.description %></blockquote>
            </div>
          </div>
        </div>

        <div class="blog-author">
          <div class="author-bio">
            <h3 class="author_name">USERNAME</h3>
          </div>
        </div>
      </div>
      <!-- end col -->
      <div class="col-lg-3 col-12 right-single">
        <div class="widget-search">
          <div class="site-search-area">
            <form method="GET" action="/courses">
              <div>
                <input class="input-text form-control" name="search" id="search-k" placeholder="Search course..."
                  type="text" />
                <button value="Search" type="submit">search</button>
              </div>
            </form>
          </div>
        </div>
        <div class="widget-categories">
          <h3 class="widget-title">Categories</h3>
          <ul>
            <li><a href="">Kategori 1</a></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- end row -->
  </div>
  <!-- end container -->
</div>
<!-- end section -->

<%- include ('partials/_footer') %>
